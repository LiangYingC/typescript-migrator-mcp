{
  "name": "typescript-migrator-mcp",
  "version": "1.0.0",
  "description": "MCP server for converting JavaScript files to TypeScript version",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "typescript-migrator-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "mcp",
    "typescript",
    "javascript",
    "conversion",
    "migration"
  ],
  "author": "LiangC",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
